rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Skis live under users/{uid}/skis/{skiId}
    match /users/{userId}/skis/{skiId} {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId;
    }

    // (keep your other collectionsâ€™ rules below)
  }
}